<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3C2E3"
    android:orientation="vertical"
    tools:context=".AboutMeActivity">

    <TextView
        android:id="@+id/initial"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="150dp"
        android:layout_marginVertical="30dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="P"
        android:textColor="@color/black"
        android:textSize="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="USERNAME"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/usernameAboutMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="EMAIL"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emailAboutMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="BALANCE"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/balanceAboutMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/TopUpID"
            android:layout_width="197dp"
            android:layout_height="match_parent"
            android:hint="Top Up Amount"
            android:inputType="number"
            android:paddingTop="10dp"
            android:paddingRight="1dp" />

        <Button
            android:id="@+id/addBusButton"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:background="#000000"
            android:text="Top Up"
            android:textColorHighlight="#000000"
            android:textColorLink="#000000"
            app:cornerRadius="21dp"
            app:iconTint="#000000" />
    </LinearLayout>


    <Button
        android:id="@+id/noRenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="60dp"
        android:text="You're not Registered as a Renter\n\n~ Register Your Company ~"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:textSize="12.5dp" />


    <Button
        android:id="@+id/yesRenter"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="10dp"
        android:paddingLeft="100dp"
        android:text="You're Registered as a Renter\n\n~ Manage Bus ~"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:textSize="12.5dp" />

</LinearLayout>